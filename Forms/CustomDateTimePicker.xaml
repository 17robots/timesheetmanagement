<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="FivesBronxTimesheetManagement.Forms.CustomDateTimePicker" Title="DateTimePicker" SizeToContent="WidthAndHeight" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <StackPanel>
      <DatePicker Name="dtpDate" HorizontalAlignment="Left" Margin="10,10,10,0" VerticalAlignment="Top" Width="200" />
      <StackPanel Orientation="Horizontal" Margin="10,10,0,10">
        <Button Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="btnCancel_Click" />
        <Button Name="btnOK" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="btnOK_Click" />
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>