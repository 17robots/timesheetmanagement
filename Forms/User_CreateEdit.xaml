<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="FivesBronxTimesheetManagement.Forms.User_CreateEdit" Title="User_CreateEdit" Width="300" SizeToContent="WidthAndHeight" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <StackPanel Margin="10,10,0,10" Width="130" HorizontalAlignment="Left">
      <Label Content="User ID" Height="26" Margin="0,5,0,0" />
      <Label Content="User Name" Height="26" Margin="0,5,0,0" />
      <CheckBox Name="ckbxIsActive" Content="Is Active" Height="26" Margin="0,5,0,0" />
      <CheckBox Name="ckbxIsAdmin" Content="Is Admin" Height="26" Margin="0,5,0,0" />
      <Button Name="btnCancel" Content="Cancel" Height="26" Margin="0,5,0,0" Click="btnCancel_Click" />
    </StackPanel>
    <StackPanel Margin="150,10,10,10" Width="130" HorizontalAlignment="Left">
      <TextBox Name="txtUserId" Height="26" Margin="0,5,0,0" />
      <ComboBox Name="cbxUserId" Height="26" Margin="0,5,0,0" Visibility="Collapsed" />
      <TextBox Name="txtUserName" Height="26" Margin="0,5,0,0" />
      <CheckBox Name="ckbxIsValidator" Content="Is Validator" Height="26" Margin="0,5,0,0" />
      <CheckBox Name="ckbxIsHourly" Content="Is Hourly" Height="26" Margin="0,5,0,0" />
      <Button Name="btnOK" Content="OK" Height="26" Margin="0,5,0,0" Click="btnOK_Click" />
    </StackPanel>
  </Grid>
</Window>