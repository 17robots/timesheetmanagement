<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="FivesBronxTimesheetManagement.Forms.RejectionReason" Height="210" Width="250" Title="Rejection Reason" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid>
      <StackPanel>
        <Label FontWeight="Bold">Rejection Reason</Label>
            <RadioButton x:Name="duplicate" Margin="5,5,0,5" GroupName="Reason" Content="Duplicate Entry" />
            <RadioButton x:Name="overHours" Margin="5,5,0,5" GroupName="Reason" Content="Over Hours" />
            <RadioButton x:Name="incorrectValues" Margin="5,0,0,5" GroupName="Reason" Content="Incorrect Value" />
            <RadioButton x:Name="somethingElse" Margin="5,0,0,5" GroupName="Reason" Content="Incorrect Date" />
            <StackPanel Orientation="Horizontal" Margin="5,0,0,5" >
                <RadioButton x:Name="other" GroupName="Reason" Content="Other: " />
                <TextBox Width="150" x:Name="otherReason" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Width="110" Margin="5,5,5,0" Click="ButtonOK_Click">Ok</Button>
                <Button Width="110" Margin="5,5,5,0" Click="ButtonCancel_Click">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>